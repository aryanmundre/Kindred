{
  "name": "@kindred/contracts",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./schemas": "./dist/schemas.json"
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --out-dir dist && node scripts/build-schemas.cjs",
    "lint": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "tsup": "^8.0.2",
    "typescript": "^5.6.3",
    "zod-to-json-schema": "^3.23.5",
    "vitest": "^1.6.0"
  }
}
